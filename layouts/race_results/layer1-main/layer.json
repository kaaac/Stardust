{
    "BlockRoot" : {
        "BlockType" : "stack",
        "Orientation" : "Vertical",
        "BackgroundImage" : "images/Background/bg.png",
        "Items" : [
            {
                "BlockType" : "stack",
                "Orientation" : "Vertical",
                "BackgroundImage" : "images/Background/bg_category.png","ColorizeBackground": {
                    "Enabled" : true,
                    "Color": "{Season.MainLeagueCategory.Color}",
                    "BlendPercentage": 100
                },
                "Items" : [
                    {
                        "BlockType" : "stack",
                        "Orientation" : "Vertical",
                        "BackgroundImage" : "images/Background/bg_effect.png","ColorizeBackground": {
                            "Enabled" : false,
                            "Color": "{Season.MainLeagueCategory.Color}",
                            "BlendPercentage": 100
                        },
                        "Items" : [
                            {
                                "BlockType" : "component",
                                "ComponentOptions" : {
                                    "ComponentName" : "race_header"
                                }
                            },
                            {
                                "BlockType" : "stack",
                                "MarginTop" : 75,
                                "MarginBottom" : 75,
                                "Orientation" : "Horizontal",
                                "HorizontalAlignment" : "Center",
                                "Items" : [
                                    {
                                        "BlockType" : "stack",
                                        "Orientation" : "Vertical",
                                        "MarginTop" : 50,
                                        "MarginLeft" : 75,
                                        "Items" : [
                                            {
                                                "BlockType" : "component",
                                                "MarginBottom" : 50,
                                                "ComponentOptions" : {
                                                    "ComponentName" : "race_info"
                                                }
                                            },
                                            {
                                                "BlockType" : "component",
                                                "HorizontalAlignment" : "Center",
                                                "RenderIf" : "{Session.FastestLapDriver.Name, Converter=EmptyObjectToFalse}",
                                                "MarginBottom" : 15,
                                                "ComponentOptions" : {
                                                    "ComponentName" : "sticker_FL_DD",
                                                    "Vars" : {
                                                        "bg" : "fastlap",
                                                        "title" : "Fastest Lap",
                                                        "content" : "{Session.FastestLapDriver.Name}"
                                                    }
                                                }
                                            },
                                            {
                                                "BlockType" : "component",
                                                "HorizontalAlignment" : "Center",
                                                "RenderIf" : "{Session.DriverDayDriver.Name, Converter=EmptyObjectToFalse}",
                                                "MarginBottom" : 15,
                                                "ComponentOptions" : {
                                                    "ComponentName" : "sticker_FL_DD",
                                                    "Vars" : {
                                                        "bg" : "driveroftheday",
                                                        "title" : "Driver of the Day",
                                                        "content" : "{Session.DriverDayDriver.Name}"
                                                    }
                                                }
                                            },
                                            {
                                                "BlockType" : "component",
                                                "HorizontalAlignment" : "Center",
                                                "RenderIf" : "{StreamerAndCommentary, Converter=EmptyObjectToFalse}",
                                                "MarginBottom" : 15,
                                                "ComponentOptions" : {
                                                    "ComponentName" : "sticker_commentary",
                                                    "Vars" : {
                                                        "content" : "{StreamerAndCommentary}"
                                                    }
                                                }
                                            }
                                        ]
                                    },
                                    {
                                        "BlockType" : "table",
                                        "HorizontalAlignment" : "Center",
                                        "MarginRight" : 75,
                                        "MarginLeft" : 75,
                                        "TableOptions" : {
                                            "ItemsSource" : "{Session.Drivers}",
                                            "RowSpacing" : 15,
                                            "HeaderTemplate" : {
                                                "BlockType" : "text",
                                                "FontName" : "{TW-Li}",
                                                "FontSize" : 35,
                                                "Foreground" : "#ffffff",
                                                "HorizontalAlignment" : "Center"
                                            },
                                            "Columns" : [
                                                {
                                                    "Header" : "",
                                                    "Name" : "position",
                                                    "Template" : 
                                                    {
                                                        "BlockType" : "component",
                                                        "ComponentName": "session_middle_position",
                                                    }
                                                },
                                                {
                                                    "Header" : "",
                                                    "Name" : "driver",
                                                    "Template" : 
                                                    {
                                                        "BlockType" : "component",
                                                        "ComponentName": "session_middle_driver",
                                                        "ComponentOptions" : {
                                                            "Vars" : {
                                                                "data": "{Item.Driver.RaceNumber}"
                                                            }
                                                        }
                                                    }
                                                },
                                                {
                                                    "Header" : "Driver",
                                                    "Name" : "drivername",
                                                    "Template" : 
                                                    {
                                                        "BlockType" : "component",
                                                        "ComponentName": "session_middle_drivername",
                                                    }
                                                },
                                                {
                                                    "Header" : "Team/Car",
                                                    "Name" : "team",
                                                    "Template" : 
                                                    {
                                                        "BlockType" : "component",
                                                        "ComponentName": "session_middle_team",
                                                    }
                                                },
                                                {
                                                    "Header" : "Gap",
                                                    "Name" : "team",
                                                    "Template" : 
                                                    {
                                                        "BlockType" : "component",
                                                        "ComponentName": "session_middle_gap",
                                                    }
                                                },
                                                {
                                                    "Header" : "",
                                                    "Name" : "Jump",
                                                    "Template" : 
                                                    {
                                                        "BlockType" : "component",
                                                        "ComponentName": "position_jump"
                                                    }
                                                },
                                                {
                                                    "Header" : "",
                                                    "Name" : "Standings-start",
                                                    "Template" : {
                                                        "BlockType" : "component",
                                                        "ComponentName" : "standings_data_start",
                                                    }
                                                },
                                                {
                                                    "Header" : "Stints",
                                                    "Name" : "Stints",
                                                    "Template" : 
                                                    {
                                                        "BlockType" : "component",
                                                        "ComponentName": "session_stints",
                                                        "ComponentOptions" : {
                                                            "Vars" : {
                                                                "type" : "BgForRace"
                                                            }
                                                        }
                                                    }
                                                },
                                                {
                                                    "Header" : "Fastest Lap",
                                                    "Name" : "FastLap",
                                                    "Template" : 
                                                    {
                                                        "BlockType" : "component",
                                                        "ComponentName": "race_fastlap"
                                                    }
                                                },
                                                {
                                                    "Header" : "Penalties",
                                                    "Name" : "Penalties",
                                                    "Template" : 
                                                    {
                                                        "BlockType" : "component",
                                                        "ComponentName": "race_penalties"
                                                    }
                                                },
                                                {
                                                    "Header" : "Points",
                                                    "Name" : "Points",
                                                    "Template" : 
                                                    {
                                                        "BlockType" : "component",
                                                        "ComponentName": "race_points"
                                                    }
                                                }
                                            ]
                                        }
                                    }
                                ]
                            }
                        ]
                    }
                    
                ]
            }
            
        ]
    }
}